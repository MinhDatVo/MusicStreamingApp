<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600" 
        x:Class="MusicStreamingApp.MainWindow"
        MaxWidth="800" MaxHeight="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="600" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Background="LightGray">
            <TextBlock Text="MuSic" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Background="Black">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10">
                <TextBox Width="400" Margin="10" />
                <Button  Width="100" HorizontalAlignment="Center" Background="Blue" >
                    <TextBlock TextAlignment="Center">Search</TextBlock>
                </Button>
            </StackPanel>
            <TextBlock Text="Main Content" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>
        </StackPanel>
    </Grid>
</Window>